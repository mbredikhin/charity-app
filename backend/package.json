{
  "name": "charity-app-backend",
  "version": "1.0.0",
  "description": "REST API backend service for the charity web app",
  "main": "app.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "dev": "nodemon src/app.ts",
    "db:migrate": "ts-node src/database/migrate.ts",
    "db:seed": "ts-node src/database/seed.ts",
    "build": "npx tsc",
    "lint": "eslint --fix \"src/**/*.ts\"",
    "prettier": "prettier --write \"src/**/*.ts\""
  },
  "author": "Maxim Bredikhin <mbredikhin.dev@gmail.com>",
  "dependencies": {
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "http-status-codes": "2.3.0",
    "jsonwebtoken": "9.0.2",
    "pg": "8.13.1"
  },
  "devDependencies": {
    "@faker-js/faker": "9.4.0",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/jsonwebtoken": "9.0.8",
    "@types/node": "22.12.0",
    "@types/pg": "8.11.11",
    "eslint": "9.20.0",
    "eslint-config-prettier": "10.0.1",
    "globals": "15.14.0",
    "nodemon": "3.1.9",
    "prettier": "3.5.0",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsx": "4.19.2",
    "typescript": "5.7.3"
  }
}